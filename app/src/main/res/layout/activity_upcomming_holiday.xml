<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".UpcommingHoliday">
    <androidx.cardview.widget.CardView
        android:id="@+id/upcommingHolidayCard"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="400dp"
        android:backgroundTint="@color/red_card"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="887dp"
            android:scaleType="centerCrop"
            android:src="@drawable/poyabg1"

            />


        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            app:cardCornerRadius="15dp"
            android:layout_gravity="bottom"
            android:layout_height="100dp"
            android:backgroundTint="@color/gray_dark"></androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>