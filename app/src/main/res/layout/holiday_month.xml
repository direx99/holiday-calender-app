<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    tools:context=".UpcommingHoliday">

    <androidx.cardview.widget.CardView
        android:id="@+id/roudedShape"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:cardCornerRadius="30dp"
        >





        <ImageView

            android:id="@+id/thisMonthImage"
            android:layout_width="match_parent"
            android:layout_height="887dp"
            android:scaleType="centerCrop"
            android:src="@drawable/poyabg1"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"

            android:orientation="vertical">

            <TextView
                android:id="@+id/txtname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/altonetrialregular"
                android:maxLines="1"
                android:text="@string/Name"
                android:paddingHorizontal="20dp"
                android:textColor="@color/black"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/txtType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/altonetrialregular"
                android:maxLines="1"
                android:text="@string/Name"
                android:paddingTop="5dp"
                android:paddingHorizontal="20dp"
                android:textColor="@color/gray_dark"
                android:textSize="15dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <TextView
                android:id="@+id/txtDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 "
                android:layout_marginLeft="20dp"
                android:paddingTop="5dp"
                android:textColor="@color/gray_dark"
                android:textSize="20dp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/txtMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marckkh "
                android:paddingTop="5dp"
                android:textColor="@color/gray_dark"
                android:textSize="20dp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/yr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023 "
                    android:paddingTop="5dp"
                    android:textColor="@color/gray_dark"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout>
































